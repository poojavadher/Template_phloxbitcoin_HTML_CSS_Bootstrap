body{
  font-family: Poppins;
  font-weight: 400;
  font-size: 16px;
  margin: unset;
  align-items: center;
}
p{
  font-family: Poppins; 
  font-size: 22px;
}
/*----------Header---------*/
#heading-2{
  font-size:80px;
  font-weight:bold;
  letter-spacing: 2px;
  font-family: Poppins;
  margin-bottom: 20px;
}
#heading-1{
  font-style: italic;
  font-size: 22px;
  color: #7a7a7a;
  font-family:Poppins;
  margin-bottom: 20px;
}
#heading-3{
  font-size: 20px;
  padding: 20px 0px 20px 0px;
  width:75%;
}
.line{ 
    border-bottom: 2px solid #7a7a7a;
    width: 40%;
}
.heading-4{
  
  font-family:Poppins;
  font-size:22px;
  color:white;
  margin-left: 5px;
  text-decoration: none;
  margin-bottom: 40px;
}
.heading-4:hover
{
  text-decoration: none;
  text-decoration-line: none;
  color: #7a7a7a;
}
header{
    width: 100%;
    height: 850px;
    background-repeat: no-repeat;
    background: linear-gradient(rgba(43, 42, 42, 0.466), rgba(43, 42, 42, 0.466)), url("img/header.jpg");
    background-size:cover;
    padding: 30px 0px 0px 10px;
}
.header-content{
  width:40%;
  color: white;
  margin-left: 10%;
}
/*----------Navigation---------*/
.navbar-toggler
{
  color: white;
  background:none;
  text-decoration: none;
  border-style: none;
}

nav {
    height: 130px;
    padding: 1%;
}

nav a {
    color: white;
    padding: 14px 16px;
    text-decoration: none;
    font-weight: lighter;
    font-size :18px;
}
nav a:hover{
  color:dimgrey;
  text-decoration-line: none;
}
/*------Button-------*/
.buttons {
  text-align: center;
}

.btn-hover {
  float: left;
  width: 200px;
  font-size: 22px;
  font-weight: 600;
  color: #fff;
  cursor: pointer;
  height: 65px;
  text-align:center;
  border: none;
  background-size: 300% 100%;
  border-radius: 50px;
  -o-transition: all .4s ease-in-out;
  -webkit-transition: all .4s ease-in-out;
  transition: all .4s ease-in-out;
  margin-right: 3px;
}

.btn-hover:hover {
  background-position: 100% 0;
  -o-transition: all .4s ease-in-out;
  -webkit-transition: all .4s ease-in-out;
  transition: all .4s ease-in-out;
}

.btn-hover:focus {
  outline: none;
}

.btn-hover.color-2 {
  background-image: linear-gradient(to right, #f5ce62, #e43603, #fa7199, #e85a19);
}

.btn-hover.color-2.btn-sub {
  font-size: 14px;
  border-radius:unset;
  height: 34px;
  width: 150px;
  padding:5px;
  margin-left: unset;
}
/*----------content---------*/
.con-div-2{
  font-weight: lighter;
  margin-top: 70px;
  width: 40%;
  line-height: 20px;
  letter-spacing: 1px;
}
.con-div-4
{
  width: 100%;
  height: 500px;
  color:white;
  font-weight: lighter;
  background-repeat: no-repeat;
  background: linear-gradient(rgba(43, 42, 42, 0.466), rgba(43, 42, 42, 0.466)),  url("img/counter.jpg") 50%;
  background-size:cover;
  margin-top: 70px;
  margin-bottom: 100px;
  line-height: 20px;
  padding-top: 50px;
  letter-spacing: 1px;
}
.cards{
  width: 100%;
  font-family: Poppins;
  height: 100%;
  padding-top: 40px;
}

.cards-des{
  color: black;
  height: 300px;
  width: 100%;
  box-shadow: 2px 2px 10px 12px #f7f4f4f3;
  border: white 1px solid ;
  margin-top: 30px;
  border-radius: 2%;
  margin: auto;
}
.cards-des:hover{
  color: white;
  background-size: auto;
  background: linear-gradient(rgba(0, 0, 0, 0.815), rgba(0, 0, 0, 0.815)),  url("img/cards.jpg") 50%;
  transition: all .2s ease-in-out;

}
.bg-text{
  position: relative;
  top:30%;
  left: 20%;
}
.div5-card{
  width: 100%;
  height: 400px;
  font-family: Poppins;
  padding-bottom: 20px;
  font-weight: bold;
  margin-top: 30px;
}
/*----------footer----------*/
footer{
  color: white;
  margin-top: 50px;
  padding-top: 20px;
  width: 100%;
  height: 300px;
  background-repeat: no-repeat;
  background: linear-gradient(rgba(43, 42, 42, 0.466), rgba(43, 42, 42, 0.466)), url("img/subfooter.jpg") 50%;
  background-size:cover;
}

.footer-sub{
  background-color: black;
  font-size: 16px;
  color: white;
  height: 100px;
  padding: 40px 15% 0px 15%;
}

 